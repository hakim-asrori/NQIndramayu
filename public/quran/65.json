        "arabic": "\u0631\u0651\u064e\u0633\u064f\u0648\u0652\u0644\u064b\u0627 \u064a\u0651\u064e\u062a\u0652\u0644\u064f\u0648\u0652\u0627 \u0639\u064e\u0644\u064e\u064a\u0652\u0643\u064f\u0645\u0652 \u0627\u0670\u064a\u0670\u062a\u0650 \u0627\u0644\u0644\u0651\u0670\u0647\u0650 \u0645\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u0670\u062a\u064d \u0644\u0651\u0650\u064a\u064f\u062e\u0652\u0631\u0650\u062c\u064e \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0627\u0670\u0645\u064e\u0646\u064f\u0648\u0652\u0627 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627 \u0627\u0644\u0635\u0651\u0670\u0644\u0650\u062d\u0670\u062a\u0650 \u0645\u0650\u0646\u064e \u0627\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u0670\u062a\u0650 \u0627\u0650\u0644\u064e\u0649 \u0627\u0644\u0646\u0651\u064f\u0648\u0652\u0631\u0650\u06d7 \u0648\u064e\u0645\u064e\u0646\u0652 \u064a\u0651\u064f\u0624\u0652\u0645\u0650\u0646\u0652\u06e2 \u0628\u0650\u0627\u0644\u0644\u0651\u0670\u0647\u0650 \u0648\u064e\u064a\u064e\u0639\u0652\u0645\u064e\u0644\u0652 \u0635\u064e\u0627\u0644\u0650\u062d\u064b\u0627 \u064a\u0651\u064f\u062f\u0652\u062e\u0650\u0644\u0652\u0647\u064f \u062c\u064e\u0646\u0651\u0670\u062a\u064d \u062a\u064e\u062c\u0652\u0631\u0650\u064a\u0652 \u0645\u0650\u0646\u0652 \u062a\u064e\u062d\u0652\u062a\u0650\u0647\u064e\u0627 \u0627\u0644\u0652\u0627\u064e\u0646\u0652\u0647\u0670\u0631\u064f \u062e\u0670\u0644\u0650\u062f\u0650\u064a\u0652\u0646\u064e \u0641\u0650\u064a\u0652\u0647\u064e\u0627\u0653 \u0627\u064e\u0628\u064e\u062f\u064b\u0627\u06d7 \u0642\u064e\u062f\u0652 \u0627\u064e\u062d\u0652\u0633\u064e\u0646\u064e \u0627\u0644\u0644\u0651\u0670\u0647\u064f \u0644\u064e\u0647\u0657 \u0631\u0650\u0632\u0652\u0642\u064b\u0627 ",
