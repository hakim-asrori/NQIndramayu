        "kitabah": "\u0642\u064e\u062f\u0652 \u0641\u064e\u0631\u064e\u0636\u064e \u0627\u0644\u0644\u0651\u0670\u0647\u064f \u0644\u064e\u0643\u064f\u0645\u0652 \u062a\u064e\u062d\u0650\u0644\u0651\u064e\u0629\u064e \u0627\u064e\u064a\u0652\u0645\u064e\u0627\u0646\u0650\u0643\u064f\u0645\u0652\u06da \u0648\u064e\u0627\u0644\u0644\u0651\u0670\u0647\u064f \u0645\u064e\u0648\u0652\u0644\u0670\u0649\u0643\u064f\u0645\u0652\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u0627\u0644\u0652\u0639\u064e\u0644\u0650\u064a\u0652\u0645\u064f \u0627\u0644\u0652\u062d\u064e\u0643\u0650\u064a\u0652\u0645\u064f ",
        "latin": "Qad fara\u1e0dall\u0101hu lakum ta\u1e25illata aim\u0101nikum, wall\u0101hu maul\u0101kum, wa huwal-\u2018al\u012bmul-\u1e25ak\u012bm(u).",
        "arabic_words": null,
