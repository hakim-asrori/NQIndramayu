        "kitabah": "\u0627\u064e\u0644\u064e\u0645\u0652 \u064a\u064e\u0623\u0652\u062a\u0650\u0643\u064f\u0645\u0652 \u0646\u064e\u0628\u064e\u0624\u064f\u0627 \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0652\u0627 \u0645\u0650\u0646\u0652 \u0642\u064e\u0628\u0652\u0644\u064f \u06d6\u0641\u064e\u0630\u064e\u0627\u0642\u064f\u0648\u0652\u0627 \u0648\u064e\u0628\u064e\u0627\u0644\u064e \u0627\u064e\u0645\u0652\u0631\u0650\u0647\u0650\u0645\u0652 \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u0652 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0627\u064e\u0644\u0650\u064a\u0652\u0645\u064c ",
